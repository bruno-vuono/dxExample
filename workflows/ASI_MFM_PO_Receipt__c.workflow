        <actions>
            <name>ASI_MFM_KR_Set_PO_Receipt_Read_Only</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISPICKVAL(ASI_MFM_Status__c, &quot;Completed&quot;) &amp;&amp; ISPICKVAL(PRIORVALUE(ASI_MFM_Status__c), &quot;Draft&quot;)&amp;&amp; ( CONTAINS(RecordType.DeveloperName, &quot;ASI_MFM_KR_PO_Receipt&quot;))</formula>
        <triggerType>onAllChanges</triggerType>
